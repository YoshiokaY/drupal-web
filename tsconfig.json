{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceRoot": "./src",
    "outDir": "./htdocs/_assets/js/",    // 書き出しフォルダの指定
  },
  "include": [
    "./src/_assets/ts/*.ts"            // 監視対象の指定
  ],
  "exclude": [
    "node_modules", "**/*.spec.ts"
  ]
}
