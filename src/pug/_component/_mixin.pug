//- slider onsenSlideMain
mixin sliderOneColm(item, cat, count)
  .onsenSlideMain-wrap
    ul(class="onsenSlideMain scrollIn up each slider" + count)
      each item in cat
        li
          figure
            img(src=imgPath + item.img + '.jpg' alt='altが入ります' width='740' height='416' loading='lazy' decoding='async')
            if item.caption
              figcaption !{item.caption}

  <!--//  スライド・サムネイル部分 -->
  ul(class="onsenSlideThumb scrollIn up slider" + count)
    <!--//  サムネイル・表示部分 -->
    each item, index in cat
      li(data-slide=index)
        figure
          img(src=imgPath + item.img + '.jpg' alt='altが入ります' width='740' height='416' loading='lazy' decoding='async')
  <!--//  /サムネイル・表示部分 -->

