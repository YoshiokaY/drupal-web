//- slider onsenSlideThreeColm - type menu
mixin sliderThreeColmTypeMenu(item, cat, count)
  ul.onsenSlideThreeColm.-type-menu.scrollIn.up.each
    each item in cat
      li
        if item.href
          a(href=item.href)
            figure
              img(src=imgPath + item.img + '.jpg' alt='altが入ります' width='740' height='416' loading='lazy' decoding='async')
              if item.caption
                figcaption !{item.caption}

            .onsenSlideThreeColm__txt
              if item.lead
                p.lead !{item.lead}
              if item.priceCaption
                p.priceCaption !{item.priceCaption}
              p.price !{item.price}
                span.unit 円
                if item.conjunction
                  span.conjunction !{item.conjunction}
              p.period #[span !{item.periodTtl}] !{item.periodText}

        else
          figure
            img(src=imgPath + item.img + '.jpg' alt='altが入ります' width='740' height='416' loading='lazy' decoding='async')
            if item.caption
              figcaption !{item.caption}

          .onsenSlideThreeColm__txt
            if item.lead
              p.lead !{item.lead}
            if item.priceCaption
              p.priceCaption !{item.priceCaption}
            p.price !{item.price}
              span.unit 円
              if item.conjunction
                span.conjunction !{item.conjunction}
            p.period #[span !{item.periodTtl}] !{item.periodText}

