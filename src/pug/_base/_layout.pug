include ../_component/_mixin
include ../_contents/_common

block vars
- let site = common["head"];
doctype html
html(dir="ltr" lang="ja")
  if slug == "top"
    head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#")
      include _head
  else
    head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#")
      include _head

  body(class="page-" + key)
    include ../../html/_conversion/_script.html
    include ../_layouts/_header

    main#main(aria-label="本文")
      include ../_layouts/_main

    include ../_layouts/_footer

    script(src=site.assets + "js/app.js")
    //- フォーカスポリフィル
    script(src="https://cdn.jsdelivr.net/npm/focus-visible@5.2.0/dist/focus-visible.min.js" integrity="sha384-xRa5B8rCDfdg0npZcxAh+RXswrbFk3g6dlHVeABeluN8EIwdyljz/LqJgc2R3KNA" crossorigin="anonymous" defer)
